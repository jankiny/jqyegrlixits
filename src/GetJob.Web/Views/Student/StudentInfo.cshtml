@{
    ViewBag.Title = "个人信息";
    Layout = "_Student";
}

@model StudentInfoViewModel

<form asp-controller="Student" asp-action="StudentInfoEdit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Name"></label>
        <div class="col-sm-10">
            <input readonly class="form-control" asp-for="Name" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="IdentityNumber"></label>
        <div class="col-sm-10">
            <input readonly class="form-control" asp-for="IdentityNumber" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Sex"></label>
        <div class="col-sm-10">
            <input readonly class="form-control" asp-for="Sex" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Birthday "></label>
        <div class="col-sm-10">
            <input type="date" class="form-control" asp-for="Birthday">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="NationId"></label>
        <div class="col-sm-10">
            <select disabled="disabled" class="form-control" asp-for="NationId" asp-items="ViewBag.Nations">
                <option value="0">-- 选择民族 --</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="PoliticalOutlookId"></label>
        <div class="col-sm-10">
            <select disabled="disabled" class="form-control" asp-for="PoliticalOutlookId" asp-items="ViewBag.PoliticalOutlooks">
                <option value="0">-- 选择政治面貌 --</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="BirthPlaceId"></label>
        <div class="col-sm-10">
            <select disabled="disabled" class="form-control" asp-for="BirthPlaceId" asp-items="ViewBag.Locations">
                <option value="0">-- 选择地区 --</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Address"></label>
        <div class="col-sm-10">
            <input readonly class="form-control" asp-for="Address" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Major"></label>
        <div class="col-sm-10">
            <input readonly class="form-control" asp-for="Major" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="College"></label>
        <div class="col-sm-10">
            <input readonly class="form-control" asp-for="College" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="DegreeId"></label>
        <div class="col-sm-10">
            <select disabled="disabled" class="form-control" asp-for="DegreeId" asp-items="ViewBag.Degrees">
                <option value="0">-- 选择学历 --</option>
            </select>
        </div>
    </div>

   

    <div id="submitBtn" class="d-none form-group row justify-content-end">
        <button type="submit" class="btn btn-sm btn-primary px-4">保存</button>
    </div>
</form>
<div id="editBtn" class="form-group row justify-content-end">
    <button class="btn btn-sm btn-primary px-4" onclick="EditCompanyInfo()">修改</button>
</div>
<script>
    function EditCompanyInfo() {
        $("input").removeAttr('readonly');
        $("textarea").removeAttr('readonly');
        $("select").removeAttr("disabled");
        $("#submitBtn").removeClass("d-none");
        $("#editBtn").addClass("d-none");
    }
</script>