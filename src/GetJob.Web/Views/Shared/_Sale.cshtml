                {
                    <li class="nav-item active">
                        <a class="nav-link text-success" asp-controller="Mine" asp-action="SignIn">请登录<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Mine" asp-action="SignUp">注册</a>
                    </li>
                }
            </ul>
            <ul class="navbar-nav justify-content-end">
                <li class="nav-item dropdown">
