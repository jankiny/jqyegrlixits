@model CompanyInfoViewModel
@{
    ViewBag.Title = "企业信息";
    Layout = "_Company";
}

<form asp-controller="Company" asp-action="CompanyInfoEdit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Name"></label>
        <div class="col-sm-10">
            <input readonly class="form-control" asp-for="Name" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="CompanyFieldId"></label>
        <div class="col-sm-10">
            <select disabled="disabled" class="form-control" asp-for="CompanyFieldId" asp-items="ViewBag.CompanyFields">
                <option value="">-- 选择企业性质 --</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="CompanyScaleId"></label>
        <div class="col-sm-10">
            <select disabled="disabled" class="form-control" asp-for="CompanyScaleId" asp-items="ViewBag.companyScales">
                <option value="">-- 选择企业规模 --</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Description"></label>
        <div class="col-sm-10">
            <textarea readonly class="form-control" asp-for="Description" rows="10"></textarea>
        </div>
    </div>

    <div id="submitBtn" class="d-none form-group row justify-content-end">
        <button type="submit" class="btn btn-sm btn-primary px-4">保存</button>
    </div>
</form>
<div id="editBtn" class="form-group row justify-content-end">
    <button class="btn btn-sm btn-primary px-4" onclick="EditCompanyInfo()">修改</button>
</div>
<script>
    function EditCompanyInfo() {
        $("input").removeAttr('readonly');
        $("textarea").removeAttr('readonly');
        $("select").removeAttr("disabled");
        $("#submitBtn").removeClass("d-none");
        $("#editBtn").addClass("d-none");
    }
</script>